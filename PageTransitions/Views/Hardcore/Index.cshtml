@model System.Collections.Generic.List<PageTransitions.PersonInfo>
@{
    ViewBag.Title = "Index";
}

<h2>Hardcore</h2>

<ul id="peeplist">
@foreach (var personInfo in Model)
{
    <li>
        <p><a href="/hardcore/edit/@personInfo.Id" class="edit">Edit</a> - <a href="/hardcore/view/@personInfo.Id" class="view">View</a> - @personInfo.Name</p>
    </li>
}
</ul>

<a href="/hardcore/normalnonfunkyview">View Regular Page</a>

<script type="text/javascript">
    $(document).ready(function () {
        $('#peeplist a.edit').click(function () {
            alert('foo');
            return false;
        });

        $('#peeplist a.view').click(function () {

            var url = $(this).attr('href');
            $.get(url, function (data) { $('section.content-wrapper').html(data); });

            history.pushState('{ state: true }', 'teh title', url);

            return false;
        });
    });
    
</script>
